	size_hint_y: 0.1
	# height: 50
	orientation: 'horizontal'
	padding: 10
	spacing: 5

	canvas:
		Line:
			rectangle: (self.x, self.y, self.width, self.height)

<Interface>:
	canvas:
		Line:
			rectangle: (self.x, self.y, self.width, self.height)
			width: 2

<ComponentPanel>:
