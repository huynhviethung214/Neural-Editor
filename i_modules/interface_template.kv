<Nametag@Label>:
	text: 'Nametag'
	size_hint_x: 0.6

<Form>:
	size_hint_y: None
	height: 30
	
	Nametag:
		height: 26
		id: nametag
		text: root.name

	TextInput:
		height: 26
		on_text: root.set_val(self.text, nametag.text, self)
		padding: [5, 2, 5, 2]
		multiline: False

<_ToolBar>:
    size_hint: (1, 0.6)
    # pos_hint: {'center_x': .5, 'center_y': .5}
