#kivy 1.10.1

<Button>:
	size_hint_x: None
	width: 100

<ToolBar>:
	size_hint_y: None
	height: 50
	# orientation: 'lr-tb'
	orientation: 'horizontal'
	padding: 10
	spacing: 10

	canvas:
		Line:
			rectangle: (self.x, self.y, self.width, self.height)

<Interface>:
	canvas:
		Line:
			rectangle: (self.x, self.y, self.width, self.height)

<ComponentPanel>:
	canvas:
		Line:
			rectangle: (self.x, self.y, self.width, self.height)

	size_hint_x: None
	width: 200

<SubContainer>:
	orientation: 'vertical'
	spacing: 10

	Interface:
		ScatterPlaneLayout:
			do_rotation: False
			do_scale: False
			do_scroll: False
	ToolBar:
		Button:
		Button:
		Button:

Container:
	orientation: 'horizontal'
	spacing: 10
	padding: 10

	SubContainer:
	ComponentPanel:
