#kivy 1.10.1
#:include force i_modules/interface_template.kv

<InteractiveScreen>:
	name: 'interface'

<SettingScreen>:
	name: 'setting'

<ToolPanel>:
	orientation: 'vertical'
	size_hint_x: None
	width: 80
	padding: 0

	Button:
		text: 'Main'
		on_press: root.parent.children[1].current = 'interface'

	Button:
		text: 'Settings'
		on_press: root.parent.children[1].current = 'setting'

<Manager>:
	current: 'interface'

	InteractiveScreen:
		Container:

	SettingScreen:

_Container:
	Manager:
	ToolPanel:
